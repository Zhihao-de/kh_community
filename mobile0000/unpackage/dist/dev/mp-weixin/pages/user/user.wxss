.user-section {
  height: 400rpx;
  padding: 100rpx 30rpx 0;
  position: relative;
  background-color: #F0AD4E;
}
.user-section .bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  -webkit-filter: blur(1px);
          filter: blur(1px);
  opacity: .7;
}
.user-info-box {
  height: 180rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: relative;
  z-index: 1;
}
.user-info-box .portrait {
  width: 130rpx;
  height: 130rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
}
.user-info-box .username {
  font-size: 38rpx;
  color: #303133;
  margin-left: 20rpx;
}
